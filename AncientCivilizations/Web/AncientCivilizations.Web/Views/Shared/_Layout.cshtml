<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ancient Civilizations</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/kendo")

    @RenderSection("styles", required: false)
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/kendo")
    @Styles.Render("~/Content/custom")
</head>
<body>
    <header>
        <div class="row">
            <div class="col-md-4">
                <a href='@Url.Action(Actions.Index, Controllers.Home, new { area = Areas.Default }, null)'>
                    <img id="logo-main" src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/32877/logo-thing.png" width="200" alt="Logo Thing main logo">
                </a>
            </div>

            <div class="col-md-4">

                @using (Html.BeginForm("All", Controllers.Articles, new { area = Areas.Default }))
                {
                    <p>
                        Search @Html.TextBox("searchQueryAll")
                        <input type="submit" value="Search" />
                    </p>
                }
            </div>

        </div>
        <nav class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", Actions.Index, Controllers.Home, new { area = Areas.Default }, null)</li>
                        <li>@Html.ActionLink("Pictures", "All", Controllers.Pictures, new { area = Areas.Default }, null)</li>
                        <li>@Html.ActionLink("Articles", "All", Controllers.Articles, new { area = Areas.Default }, null)</li>
                        @if (User.IsInRole("User") || User.IsInRole("Administrator"))
                        {
                            <li>@Html.ActionLink("Contribute", Actions.Index, Controllers.Home, new { area = Areas.Contribution }, null)</li>
                        }
                        @if (User.IsInRole("Administrator"))
                        {
                            <li>@Html.ActionLink("Administration", Actions.Index, Controllers.Home, new { area = Areas.Administration }, null)</li>
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </nav>
    </header><!-- header role="banner" -->

    <div class="container body-content">
            @RenderSection("leftPanel", required: false)
            @RenderBody()
            @RenderSection("rightPanel", required: false)
        @*<hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>*@
    </div>
    @Scripts.Render("~/bundles/jqueryunobtrusiveajax")
    @Scripts.Render("~/bundles/jqueryval")

    @RenderSection("scripts", required: false)
</body>
</html>
