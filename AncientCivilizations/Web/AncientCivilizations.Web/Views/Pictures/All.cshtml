@using AncientCivilizations.Web.Models.Public
@model IEnumerable<PicturesViewModel>

<div id="gallery-header" class="row">
    <div id="gallery-search" class="col-md-6 col-md-offset-6">
        @using (Html.BeginForm("All", Controllers.Pictures))
        {
            @Html.TextBox("searchQuery", null, new { @class = "col-md-8 col-md-offset-3", placeholder = "Search" })
            <button type="submit" class="btn btn-default pull-right">
                <span class="glyphicon glyphicon-search"></span>
            </button>
        }
    </div>
</div>

<div id="gallery-container">
    @foreach (var item in Model)
    {
        <div class="pictures-container">
            <a href="@Url.Action("Detailed", Controllers.Pictures, new { id = @item.Id, area = Areas.Default })">
                <img class="gallery-picture" src="@Url.Content("~/Content/Pictures/" + @item.Url)" />
            </a>
        </div>
    }
</div>