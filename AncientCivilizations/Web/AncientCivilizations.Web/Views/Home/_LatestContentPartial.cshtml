@model IEnumerable<AncientCivilizations.Web.Models.Public.HomePageArticleViewModel>

<h2>Latest Articles</h2>
@{
    foreach (var item in Model)
    {
        <div class="row col-md-10">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h5 class="panel=title"></h5>
                </div>
                <div class="panel-body">
                    <div class="col-md-1"></div>
                    <div class="col-md-10">
                        <div class="row">
                            <h3 class="text-center">
                                @Html.DisplayFor(m => item.Title)
                            </h3>
                        </div>
                        <div class="row text-right">
                            by
                            @Html.ActionLink(item.CreatorName, "UserProfile", Controllers.Account, new { id = item.CreatorId, area = Areas.Default }, null)
                        </div>
                        <div class="row text-right">
                            published on
                            @Html.DisplayFor(m => item.CreatedOn)
                        </div>
                        <div class="row">
                            <div class="text-center">
                                <div id="article-content">@Html.Raw(item.Content)</div>...
                                @Html.ActionLink("Read More", "DetailedView", Controllers.Articles, new { id = @item.Id, area = Areas.Default }, new { @class = "pull-right" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-1"></div>
                </div>
            </div>
        </div>
    }
}
