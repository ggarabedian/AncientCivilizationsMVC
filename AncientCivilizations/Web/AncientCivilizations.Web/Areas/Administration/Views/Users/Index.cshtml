@using AncientCivilizations.Web.Models.Administration

<h2>Users</h2>

@(Html.CustomGrid<UserViewModel>("grid", Controllers.Users, false, m => { m.Id(u => u.Id); })
    .Columns(cols =>
    {
        cols.Bound(pr => pr.Id).Hidden();
        cols.Template(pr => pr.FullName).Title("Full Name")
            .ClientTemplate("<a href='/UserProfile/Index/#= Id #'>#= FullName #</a>");
        cols.Bound(pr => pr.Email);
        cols.Bound(pr => pr.CreatedOn).Format(Globals.TimeFormat);
        cols.Bound(pr => pr.ModifiedOn).Format(Globals.TimeFormat);
        cols.Bound(pr => pr.ArticlesCount).Hidden();
        cols.Bound(pr => pr.PicturesCount).Hidden();
        cols.Bound(pr => pr.VideosCount).Hidden();

        cols.Command(commands => { commands.Edit(); commands.Destroy(); }).Width(190);
    }))
